{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./components/**/*", "typing/**/*"],
  "exclude": ["node_modules", "lib"]
}